<form action="/tasks" method="post" name="new_task" autocomplete="off" >
  <input type="text" name="task_input" value="" />
  <input type="submit" value="post" />
</form>

<ul>
<% tasks.each do |task| %>
  <li class="<%= task.status %>"><%= task.title %> <a href="/<%= task.id %>/done" title="">done</a> <a href="/<%= task.id %>/delay" title="">delay</a></li>
<% end %>
</ul>
